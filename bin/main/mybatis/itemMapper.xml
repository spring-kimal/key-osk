<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="c.e.d.mapper.ItemMapper">
	<insert id="save" parameterType="Item">
		insert into item values (#{itemId},#{itemName},#{itemQuantity},#{itemPrice},#{category},#{img})
	</insert>
	
	<update id="update" parameterType="Item">
		update item
		set  itemName=#{itemName}, itemQuantity=#{itemQuantity}, itemPrice=#{category}, img=#{img}
		where itemId=#{itemId}
		
	</update>
	
</mapper>